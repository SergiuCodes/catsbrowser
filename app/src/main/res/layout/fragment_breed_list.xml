<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.catsbrowser.domain.model.BreedViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.BreedListFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FRAGMENT LIST BREEDS"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/recycler_view_breed_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/recycler_view_breed_list"
            app:layout_constraintTop_toTopOf="@+id/recycler_view_breed_list" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_breed_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:setBreeds="@{viewModel.MUiBreedsList}"
            tools:listitem="@layout/breed_item" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>